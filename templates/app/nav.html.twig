<nav class="bg-white border-b border-gray-200 shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <div class="flex">
                <div class="flex-shrink-0 flex items-center">
                    {% if region is defined %}
                    <div class="text-2xl font-bold text-gray-900">
                        {{ region.flag }}
                        {{ region.name | trans }}
                    </div>
                    {% else %}
                    <div class="text-2xl font-bold text-gray-900">
                        {{ welcome.title }}
                    </div>
                    {% endif %}
                </div>
            </div>
            <div class="hidden sm:ml-6 sm:flex sm:items-center">
                {% if app.user is null %}
                <a href="{{ path('connect_openstreetmap_start') }}"
                    class="ml-6 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    {{ 'Login with OSM' | trans }}
                </a>
                {% else %}
                <!-- Profile dropdown -->
                <div class="ml-3 relative">
                    <div>
                        <button type="button"
                            class="max-w-xs bg-white flex items-center text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                            id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                            <span class="sr-only">{{ 'Open user menu' | trans }}</span>
                            {% if app.user.image is not null %}
                            <img class="h-8 w-8 rounded-full border" alt="{{ app.user.displayName }} profile picture"
                                src="{{ app.user.image }}">
                            {% else %}
                            <img class="h-8 w-8 rounded-full border" alt="Default profile picture"
                                src="{{ asset('build/images/avatar_large.png') }}">
                            {% endif %}
                        </button>
                    </div>

                    <!-- Dropdown menu, show/hide based on menu state. -->
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</nav>